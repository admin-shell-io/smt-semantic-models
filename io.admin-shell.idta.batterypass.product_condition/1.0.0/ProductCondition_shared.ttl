### Negative Events

:negativeEvents a samm:Property ;
   samm:preferredName "negative events"@en ;
   samm:description "Information on accidents."@en ;
   samm:characteristic :NegativeEventsCharacteristic .

:NegativeEventsCharacteristic a samm:Characteristic ;
   samm:preferredName "negative events Characteristic"@en ;
   samm:description "Negative Events document details."@en ;
   samm:dataType :NegativeEventsEntity .

:NegativeEventsEntity a samm:Entity ;
   samm:preferredName "negative events Entity"@en ;
   samm:description "Negative Events Entity provides the information of no of accidents and deep discharge, over discharge events."@en ;
   samm:properties ( 
    
   [ samm:property :informationOnAccidents;  samm:payloadName "InformationOnAccidents" ] 
   [ samm:property :noOfDeepDischargeEvents; samm:optional true; samm:payloadName "NoOfDeepDischargeEvents" ]
   [ samm:property :noOfOverchargeEvents; samm:optional true; samm:payloadName "NoOfOverchargeEvents" ] 
   ) .
   
:noOfDeepDischargeEvents a samm:Property ;
   samm:preferredName "number of deep discharge events"@en ;
   samm:description "Document for number of deep discharge events."@en ;
   samm:characteristic :NumberOfDeepDischargeEventsCharacteristic ;
   samm:exampleValue "3"^^xsd:int .

:noOfOverchargeEvents a samm:Property ;
   samm:preferredName "number of overcharge events"@en ;
   samm:description "Document for number of overcharge events."@en ;
   samm:characteristic :NumberOfOverchargeEventsCharacteristic ;
   samm:exampleValue "3"^^xsd:int .
   
:informationOnAccidents a samm:Property ;
   samm:preferredName "information on accidents"@en ;
   samm:description "Reference to document of Information on accidents."@en ;
   samm:characteristic docu:DocumentSet .
   
:NumberOfDeepDischargeEventsCharacteristic a samm:Characteristic ;
   samm:preferredName "number of deep discharge events"@en ;
   samm:description "Number of deep discharge events."@en ;
   samm:dataType xsd:int .
   
:NumberOfOverchargeEventsCharacteristic a samm:Characteristic ;
   samm:preferredName "number of overcharge events"@en ;
   samm:description "Number of overcharge events."@en ;
   samm:dataType xsd:int .