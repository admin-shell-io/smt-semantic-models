@prefix samm: <urn:samm:org.eclipse.esmf.samm:meta-model:2.2.0#> .
@prefix samm-c: <urn:samm:org.eclipse.esmf.samm:characteristic:2.2.0#> .
@prefix samm-e: <urn:samm:org.eclipse.esmf.samm:entity:2.2.0#> .
@prefix unit: <urn:samm:org.eclipse.esmf.samm:unit:2.2.0#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix : <urn:samm:io.admin-shell.idta.generic.technical_data:2.0.0#> .
@prefix shared: <urn:samm:io.admin-shell.idta.shared:3.1.0#> .

:productImages a samm:Property ;
   samm:preferredName "product images"@en ;
   samm:description "Image files for associated product provided in common format (.png, .jpg)."@en ;
   samm:see <urn:irdi:0173-1#02-ABM220#001> ;
   samm:see <https://api.eclass-cdp.com/0173-1-02-ABM220-001> ;
   samm:characteristic :ProductImageSet .

:ProductImageSet a samm-c:Set ;
   samm:dataType :ProductImage .  

:ProductImage a samm:Entity ;
   samm:preferredName "product image"@en ;
   samm:description "Pictorial representation of the product related to an application."@en ;
   samm:properties ( 
      [ samm:property :imageFile; samm:payloadName "ImageFile" ]
	  [ samm:property :imageNote; samm:optional true; samm:payloadName "ImageNote" ]
   ) .
   
:imageFile a samm:Property ;
    samm:see <urn:irdi:0173-1#02-ABK291#002> ;
    samm:preferredName "image file"@en ;
    samm:description "Picture of the product (low resolution) 72 dpi / rgb (GIF or JPG)."@en ;
    samm:characteristic shared:FileWithContentType .

:imageNote a samm:Property ;
    samm:see <urn:irdi:0173-1#02-ABL423#001> ;
	samm:see <https://api.eclass-cdp.com/0173-1-02-ABL423-001> ;
    samm:preferredName "image note"@en ;
    samm:description "Notes or explanations about the image provided."@en ;
    samm:characteristic shared:MultiLanguageTexts .
